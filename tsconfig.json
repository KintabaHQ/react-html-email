{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es6",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": true,
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["example/**/*"]
}
